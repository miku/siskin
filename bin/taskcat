#!/bin/bash

# Just like `less` but takes a taskname as arguments. The task must have been
# completed successfully before you `taskcat` it.
#
# Examples
#
#     $ taskcat EBLDates
#     $ taskcat Events --iln 10
#

set -e -u

args=("$@")

OUTPUT=$(taskoutput $@|tail -1)
if [[ "$OUTPUT" == *mrc ]]; then
    yaz-marcdump $(taskoutput $@|tail -1)
else
    cat $(taskoutput $@|tail -1)
fi
