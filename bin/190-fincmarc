"""

Source: Early English Books Online EEBO
SID: 190
Ticket: #16749, #16965
Origin: local file

"""


import os
import sys

import marcx
import pymarc
from siskin.configuration import Config
from siskin.utils import marc_clean_record, remove_delimiter
from siskin.arguments import FincArgumentParser


##################################################################################
# 1. Parse arguments and prepare outputfile
##################################################################################

SID = "190"

fip = FincArgumentParser()

# Get arguments
inputfile = fip.args.inputfile
outputformat = fip.args.outputformat

# Generates string for outputfilename, example: 196-output-20200701.fincmarc.mrc
outputfilename = fip.outputfilename(SID)

# Removes n old outputfiles as specified in output-hist-size
fip.remove_old_outputfiles(SID)

fip.remove_old_outputfiles(SID)

# Set output format for MARC record
if outputformat == "xml":
    outputfile = pymarc.XMLWriter(open(outputfilename, "wb"))
else:
    outputfile = open(outputfilename, "wb")


##################################################################################
# 2. Get input data
##################################################################################

if not inputfile:
    config = Config.instance()
    inputfile = config.get(SID, "input")

inputfile = open(inputfile, "rb")
reader = pymarc.MARCReader(inputfile, force_utf8=True)


##################################################################################
# 3. Process data
##################################################################################

for record in reader:

    record = marcx.Record.from_record(record)
    record.force_utf8 = True
    record.strict = False

    # Add Leader Pos. 18, because metadata contains ISBD characters
    leader1 = record.leader[:18]
    leader2 = record.leader[19:]
    leader = leader1 + "i" + leader2
    record.leader = leader

    # Identifier
    f001 = record["001"].data
    record.remove_fields("001")
    record.add("001", data="190-" + f001)

    # Collection and sealing
    collections = ["a", f001, "b", "190", "c", "sid-190-col-eebo", "c", "ZDB-1-EEB"]
    record.add("980", subfields=collections)

    # Removes surplus delimiters (ISBD etc.), refs #16965
    record = remove_delimiter(record)

    # Remove empty subfields
    marc_clean_record(record)

    # Write record to file
    if outputformat == "xml":
        outputfile.write(record)
    else:
        outputfile.write(record.as_marc())

inputfile.close()
outputfile.close()
