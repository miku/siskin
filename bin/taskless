#!/bin/bash

# Just like `less` but takes a taskname as argument. The task must have been
# completed successfully before you can `taskless` it.
#
# Examples
#
#     $ taskless EBLDates
#     $ taskless -N Events --iln 10
#
set -eu
set -o pipefail

args=("$@")

if [ "${args[0]}" == "-N" ]; then
    less -N $(taskoutput "${@:2}"|tail -1)
else
    less $(taskoutput "$@"|tail -1)
fi
