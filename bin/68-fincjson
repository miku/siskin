"""

Source: Online Contents (OLC)
SID: 68
Ticket: #5163, #6743, #9354, #10294, #16196
Origin: HTTP

"""


import re
import sys
import json

import marcx
from siskin.configuration import Config
from siskin.arguments import FincArgumentParser


def get_field(record, field):
    try:
        return record[field]
    except:
        return ""


def rename_field(record, oldname, newname, singlevalued=False):
    try:
        record[newname] = record.pop(oldname)
        if singlevalued:
            record[newname] = record[newname][0]
    except:
        pass


def remove_field(record, field):
    try:
        del record[field]
    except:
        pass


##################################################################################
# 1. Parse arguments and prepare outputfile
##################################################################################

SID = "68"

fip = FincArgumentParser()
outputfilename = fip.outputfilename(SID)
inputfilename = fip.args.inputfilename
outputformat = "json"

fip.remove_old_inputfiles(SID)
fip.remove_old_outputfiles(SID)

outputfile = open(outputfilename, "w")


##################################################################################
# 2. Get input data
################################################################################

if not inputfilename:
    config = Config.instance()
    inputfilename = config.get(SID, "input")
    # os.system("" % inputfilename)

inputfile = open(inputfilename, "r")


##################################################################################
# 3. Process data
##################################################################################

for record in inputfile:

    record = json.loads(record)

    # Set Finc-ID
    old_id = record["id"]
    finc_id = "ai-68-" + old_id
    record["finc.id"] = finc_id

    # Add Mega Collections
    sets = record["collection_details"]
    mega_collections = []
    institutions = []
    if "SSG-OLC-BUB" in sets:
        mega_collections.append("OLC SSG Informations-, Buch- und Bibliothekswesen")
        institutions.append("FID-BBI-DE-23")

    if "SSG-OLC-MKW" in sets:
        mega_collections.append("OLC SSG Medien- / Kommunikationswissenschaft")
        institutions.append("DE-15-FID")
    
    if "SSG-OLC-FTH" in sets:
        mega_collections.append("OLC SSG Film / Theater")
        institutions.append("DE-15-FID")

    record["finc.mega_collection"] = mega_collections
    record["x.labels"] = institutions

    # Add Source-ID
    record["finc.source_id"] = "68"

    # Author
    authors = get_field(record, "author2")
    if  isinstance(authors, list):
        aut = []
        for author in authors:
            aut.append({"rft.au": author})
        record["authors"] = aut
    remove_field(record, "author2")

    # Publish date
    date = get_field(record, "publishDateSort")
    if date:
        #date = date + "-01-01T00:00:00Z00:00"
        date = date + "-01-01T00:00:00Z"
        record["x.date"] = date

    # Map formats
    format = get_field(record, "format")
    if format == "eJournal":
        record["format"] = "Journal"
    elif format == "electronic Article":
        record["format"] = "Article"
    elif format == "Monograph Series":
        record["format"] = "Serial"
    elif format == "Serial Volume":
        record["format"] = "Book"

    # Rename fields
    rename_field(record, "title_short", "rft.atitle", singlevalued=True)  # sometimes also rft.btitle???
    rename_field(record, "title_sub", "x.subtitle", singlevalued=True)
    rename_field(record, "container_title", "rft.jtitle")
    rename_field(record, "container_issue", "rft.issue")
    rename_field(record, "container_volume", "rft.volume")
    rename_field(record, "container_start_page", "rft.spage")
    rename_field(record, "lang_code", "languages")
    rename_field(record, "publisher", "rft.pub")
    rename_field(record, "publish_place", "rft.place")
    rename_field(record, "format", "finc.format", singlevalued=True)
    rename_field(record, "issn", "rft.eissn")
    rename_field(record, "abstract", "abstract", singlevalued=True)
    # TODO: Pages

    # Remove fields
    remove_field(record, "id")
    #remove_field(record, "title_short")
    remove_field(record, "title_full")
    remove_field(record, "isfreeaccess_txt")
    remove_field(record, "collection_details")
    remove_field(record, "publishDateSort")

    # Write one JSON-record
    outputfile.write(json.dumps(record) + "\n")

inputfile.close()
outputfile.close()
